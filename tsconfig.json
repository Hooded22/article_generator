{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonJS"
  }
}